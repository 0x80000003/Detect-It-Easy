init("~image", "Greg Ward's RGBE / Radiance HDR (.hdr,.pic,.rgbe,.xyze)", "picture");

function detect() {
    if (X.fSig(0,0x80,"'#?RADIANCE'0A") < 0 && X.fSig(0,0x80,"'#?RGBE'0A")
        || X.fSig(0x0A,0x400,"0A'FORMAT='") < 0) return false;
    bDetected = true;
    return result();
}