// https://www.amd.com/en/products/graphics/technologies/fidelityfx/super-resolution.html
meta("library", "AMD FSR");

function detect() {
    if (PE.is64()) {
        if (PE.isLibraryPresentExp(/^ffx_fsr2/i) || PE.isExportFunctionPresent("ffxFsr2ContextCreate")) {
            sVersion = "2.X";
        } else if (PE.isLibraryPresentExp(/^ffx_fsr3/i) || PE.isExportFunctionPresent("ffxFsr3UpscalerContextCreate")) {
            sVersion = "3.X";
        } else if (PE.isLibraryPresentExp(/^ffx_fsr/i) || PE.isLibraryPresentExp(/fidelityfx/i)) { // unknown version
            bDetected = true;
        } else if (PE.isExportFunctionPresentExp(/^ffxFsr/)) {
            sOptions = "EAT";
            bDetected = true;
        }
    }

    bDetected = bDetected || Boolean(sVersion);

    return result();
}