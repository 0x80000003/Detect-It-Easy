var isLD = false; // is language detected
var c_cpp = false; // C/C++

function _isLangDetected() {
    return isLD;
}

function _setLang(languageName, isPositive, version) {

    if (isPositive == true || isPositive == undefined) {
        // if C/C++ already detected
        if (c_cpp && (languageName == "C" || languageName == "C++")) {
            _removeResult("language", "C/C++");
        }

        if (File.isVerbose() && !_isResultPresent("language", languageName)) {
            _setResult("language", languageName, version ? version : "", "");
            if (languageName == "C/C++") c_cpp = true;
            isLD = true;
        }
    }

}